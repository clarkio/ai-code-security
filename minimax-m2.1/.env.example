# Security Configuration - COPY THIS TO .env AND FILL IN VALUES
# WARNING: Never commit .env to version control!

# Server Configuration
PORT=3000
NODE_ENV=production

# Database Encryption Key (generate a strong 32-byte key)
DB_KEY=your-32-byte-database-encryption-key-here

# JWT Configuration (generate strong secrets)
JWT_SECRET=your-super-secure-jwt-secret-min-32-chars
JWT_REFRESH_SECRET=your-refresh-token-secret-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-session-secret-min-32-chars

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=https://yourdomain.com,http://localhost:3000
