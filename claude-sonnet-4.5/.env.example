# Server Configuration
NODE_ENV=production
PORT=3000
HOST=localhost

# Security Configuration
JWT_SECRET=your-super-secure-random-secret-minimum-32-characters-long-change-this
JWT_EXPIRE=24h
JWT_COOKIE_EXPIRE=1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com

# Session Security
COOKIE_SECRET=another-super-secure-random-secret-minimum-32-characters-change-this

# Additional Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000
