<h1>Edit note</h1>
<% if (typeof error !== 'undefined') { %>
<p class="error"><%= error %></p>
<% } %>
<form method="post" action="/notes/<%= note.id %>" autocomplete="off">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
  <div class="field">
    <label for="title">Title</label>
    <input
      id="title"
      name="title"
      required
      maxlength="200"
      value="<%= note.title %>"
    />
  </div>
  <div class="field">
    <label for="body">Body</label>
    <textarea id="body" name="body" maxlength="5000" rows="10">
<%= note.body %></textarea
    >
  </div>
  <button class="btn" type="submit">Save</button>
  <a class="btn" href="/notes/<%= note.id %>">Cancel</a>
</form>
