# Server Configuration
NODE_ENV=development
PORT=3000

# Database
MONGODB_URI=mongodb://localhost:27017/secure_notes

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=90d
JWT_COOKIE_EXPIRES_IN=90

# Email (for password reset)
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USERNAME=your_email_username
EMAIL_PASSWORD=your_email_password
EMAIL_FROM='Secure Notes <noreply@securenotes.com>'

# Security
RATE_LIMIT_WINDOW_MS=15 * 60 * 1000  # 15 minutes
RATE_LIMIT_MAX=100  # limit each IP to 100 requests per windowMs

# CORS (comma-separated origins, or * for all)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# HTTPS (for production)
# NODE_TLS_REJECT_UNAUTHORIZED=0  # Only for development with self-signed certificates
