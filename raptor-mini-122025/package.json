{
  "name": "secure-notes-app",
  "version": "1.0.0",
  "description": "Secure, production-ready notes app",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon --watch src --exec node src/index.js",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "migrate:make": "knex migrate:make",
    "seed": "knex seed:run",
    "lint": "eslint .",
    "test": "jest --runInBand",
    "audit": "npm audit --audit-level=high",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "argon2": "^0.34.9",
    "connect-pg-simple": "^8.0.0",
    "csurf": "^1.11.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "knex": "^2.7.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "eslint": "^8.47.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.4.3"
  }
}
