# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/secure_notes_db
DATABASE_SSL=true

# Encryption Keys (Generate secure 256-bit keys)
ENCRYPTION_KEY=your-base64-encoded-256-bit-encryption-key-here
ENCRYPTION_KEY_ROTATION=your-base64-encoded-256-bit-rotation-key-here

# JWT Configuration
JWT_SECRET=your-base64-encoded-jwt-secret-here
JWT_REFRESH_SECRET=your-base64-encoded-jwt-refresh-secret-here
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password-here

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=5
SESSION_TIMEOUT=15

# Application Configuration
NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log