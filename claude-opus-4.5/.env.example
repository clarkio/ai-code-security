# Environment Configuration
# IMPORTANT: Never commit this file to version control with real values!
# Copy this to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Security Keys - MUST be changed in production!
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_RANDOM_64_BYTE_HEX_STRING_IN_PRODUCTION
SESSION_SECRET=CHANGE_THIS_TO_ANOTHER_RANDOM_64_BYTE_HEX_STRING

# JWT Configuration
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database
DATABASE_PATH=./data/notes.db

# CORS - comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000

# Cookie Settings
COOKIE_SECURE=false
COOKIE_SAME_SITE=strict

# Logging
LOG_LEVEL=info
