# App
NODE_ENV=development
PORT=3000
TRUST_PROXY=false
COOKIE_SECURE=false

# Must be 32+ characters (prefer 64+). Rotate if leaked.
SESSION_PASSWORD=change-me-change-me-change-me-change-me

# Double-submit CSRF secret (32+ characters)
CSRF_SECRET=change-me-change-me-change-me-change-me

# Database
# SQLite (dev): file:./prisma/dev.db
# Postgres (prod): postgresql://user:pass@host:5432/db?schema=public
DATABASE_URL=file:./prisma/dev.db

# Logging
LOG_LEVEL=info
